{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-S",
                ".",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "options": {
                "env": {
                    "OMP_NUM_THREADS": "16"
                }
            }
        },
        {
            "label": "build and run",
            "dependsOn": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "options": {
                "env": {
                    "OMP_NUM_THREADS": "16"
                }
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "group": "build"
        }
    ]
}