{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Пук среньк",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/DAA.exe",
            "args": ["${input:taskNumber}", "${input:flags}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "OMP_NUM_THREADS",
                    "value": "16"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set OpenMP threads for debugging",
                    "text": "set environment OMP_NUM_THREADS=4"
                }
            ],
            "preLaunchTask": "build and run",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",
            "logging": {
                "engineLogging": true
            }
        }
    ],
    "inputs": [
        {
            "id": "taskNumber",
            "description": "Номер задания (1, 2, 3)",
            "type": "promptString"
        },
        {
            "id": "flags",
            "description": "Флаги для задания (разделенные пробелами)",
            "type": "promptString"
        }
    ]
}