{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-windows",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build-windows",
                "--config",
                "Debug",
                "--target",
                "OSSP_Project_Windows"
            ],
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": "cmake-windows",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "cmake-windows",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}/windows",
                "-B",
                "${workspaceFolder}/build-windows",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-G",
                "MinGW Makefiles"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build-linux",
            "type": "shell",
            "command": "wsl",
            "args": [
                "-d",
                "docker-desktop",
                "sh",
                "-c",
                "cd /mnt/host/c/Users/artio/projects/cpp/ossp && rm -rf build-linux && cmake -S linux -B build-linux -DCMAKE_BUILD_TYPE=Debug && cmake --build build-linux --target OSSP_Project_Linux"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake-linux",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}/linux",
                "-B",
                "${workspaceFolder}/build-linux",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-G",
                "MinGW Makefiles"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}